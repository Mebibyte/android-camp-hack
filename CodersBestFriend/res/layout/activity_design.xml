<?xml version="1.0" encoding="utf-8"?>

<!--suppress ALL -->
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <com.HACK.codersbestfriend.DrawPanel
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/custom" />

    <Button android:id="@+id/pencilButton"
            android:width="@dimen/button_size"
            android:height="@dimen/button_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="@dimen/pencilX"
            android:layout_y="@dimen/buttonY"
            android:onClick="changeToPencil"
            android:alpha="1"/>

    <Button android:id="@+id/eraserButton"
            android:width="@dimen/button_size"
            android:height="@dimen/button_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="@dimen/eraserX"
            android:layout_y="@dimen/buttonY"
            android:onClick="changeToEraser"
            android:alpha="1"/>

    <Button android:id="@+id/rectangleButton"
            android:layout_x="@dimen/rectangleX"
            android:layout_y="@dimen/buttonY"
            android:width="@dimen/button_size"
            android:height="@dimen/button_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changeToRectangle"
            android:alpha="1"/>
</AbsoluteLayout>